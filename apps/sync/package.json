{
  "name": "@fissa/sync",
  "version": "1.0.0",
  "description": "Syncing currently playing tracks in spotify with the fissa playlists",
  "main": "index.ts",
  "types": "index.ts",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js && ./prisma.sh",
    "clean": "rm -rf node_modules",
    "test": "vitest",
    "dev": "ts-node src/index.ts",
    "start": "pnpm build && node --experimental-specifier-resolution=node dist",
    "with-env": "dotenv -e ../../.env --"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fissa/api": "*",
    "@fissa/db": "*",
    "@fissa/utils": "*",
    "@trpc/client": "^10.12.0",
    "esbuild": "^0.17.17",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "@fissa/test": "*",
    "@types/node-cron": "^3.0.7",
    "dotenv": "^16.0.3",
    "eslint-config-acme": "0.0.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
